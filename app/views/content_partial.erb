<div class="content">
  <div class="banner">
    <h5> <%= @movies[:title] %> <%= @comment %> </h5>
  </div>

  <div class="score">
    <h6>Metacritic Score: <%= @movies[:score] %> </h6>
  </div>

  <div class="poster">
    <a target="blank" href="http://www.metacritic.com/movie/<%=@movies[:title].downcase.gsub(' ', '-')%>"><img src="<%= @poster %>" /></a>
  </div>
</div>
<br><br>

<footer>
    <img id='footer_poop_left' src="/images/poop.png" alt="good movies" />
    <img id='footer_poop_right' src="/images/poop.png" alt="good movies" />
</footer>
